#!/bin/sh
#
# Set up environment variables for general build tool to operate
#
if ! [ -f ./buildenv ]; then
	echo "Need to source from the buildenv directory" >&2
	return 0
fi

# Note: requires zlib to be installed into system as pre-req
export ZOPEN_ROOT="${PWD}"
export ZOPEN_TYPE="GIT"

export ZOPEN_GIT_URL="https://github.com/git/git"
export ZOPEN_GIT_DEPS="git make m4 perl autoconf automake help2man makeinfo xz zlib openssl curl expat gettext"

export ZOPEN_EXTRA_CPPFLAGS="-I\${OPENSSL_HOME}/include,\${GETTEXT_HOME}/include -DNO_REGEX=NeedsStartEnd"
export ZOPEN_EXTRA_LDFLAGS="-L\${GETTEXT_HOME}/lib -L\${OPENSSL_HOME}/lib"

export ZOPEN_BOOTSTRAP="make"
export ZOPEN_BOOTSTRAP_OPTS="configure"
